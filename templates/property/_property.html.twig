<div class="card mt-3" >
    {% if property.filename %}
        <img src="/php/TP_Symfony/MaSuperAgence/public/{{vich_uploader_asset(property, 'imageFile')}}" alt="{{ property.filename }}" style="width: 100%; height: 80%;"/>
    {% else %}
        <img src="/php/TP_Symfony/MaSuperAgence/public/images/properties/empty.jpg" alt="card-img-top" style="width: 100%; height: 80%;"/>
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id })}}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }}m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formatedPrice }} €
        </div>
    </div>
</div>